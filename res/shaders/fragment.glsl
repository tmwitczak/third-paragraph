#version 430 core
// ////////////////////////////////////////////////////////////// Inputs //
in vec2 texCoord;
// ///////////////////////////////////////////////////////////// Outputs //
out vec4 outColor;
// //////////////////////////////////////////////////////////// Uniforms //
uniform vec3 uniformColor;
uniform sampler2D uniformTexture;
// //////////////////////////////////////////////////////////////// Main //
void main() {
    outColor = texture(uniformTexture, texCoord) * vec4(uniformColor, 1.0);
}
