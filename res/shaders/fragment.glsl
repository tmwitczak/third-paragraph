// //////////////////////////////////////////////////////// GLSL version //
#version 430 core

// ////////////////////////////////////////////////////////////// Inputs //
in vec2 texCoordF;

// ///////////////////////////////////////////////////////////// Outputs //
out vec4 outColor;

// //////////////////////////////////////////////////////////// Uniforms //
uniform vec3 uniformColor;
uniform sampler2D uniformTexture;

// //////////////////////////////////////////////////////////////// Main //
void main() {
    outColor = texture(uniformTexture, texCoordF) * vec4(uniformColor, 1.0);
}

