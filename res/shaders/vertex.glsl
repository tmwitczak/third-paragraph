#version 430 core
// ////////////////////////////////////////////////////////////// Inputs //
layout (location = 0) in vec3 inPosition;
layout (location = 1) in vec2 inTextureCoordinates;
// ///////////////////////////////////////////////////////////// Outputs //
out vec2 texCoordVG;
// //////////////////////////////////////////////////////////// Uniforms //
uniform mat4 transform;
// //////////////////////////////////////////////////////////////// Main //
void main() {
    gl_Position = transform * vec4(inPosition, 1.0);
    texCoordVG = inTextureCoordinates;
}
